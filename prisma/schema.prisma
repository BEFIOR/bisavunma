generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  slug        String            @id
  title       String
  description String?
  image       String?
  altCategory String?           @map("alt_kategori")

  features   ProductFeature[]
  categories ProductCategory[]

  @@map("products")
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  name         String?
  passwordHash String    @map("password_hash")
  passwordSalt String    @map("password_salt")
  role         String    @default("admin")
  createdAt    DateTime  @map("created_at") @default(now())
  updatedAt    DateTime  @map("updated_at") @updatedAt

  sessions Session[]

  @@map("users")
}

model Session {
  id        String   @id
  userId    Int      @map("user_id")
  createdAt DateTime @map("created_at") @default(now())
  expiresAt DateTime @map("expires_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model ProductFeature {
  productSlug String @map("product_slug")
  position    Int
  feature     String

  product Product @relation(fields: [productSlug], references: [slug], onDelete: Cascade)

  @@id([productSlug, position])
  @@map("product_features")
}

model Category {
  id          Int       @id @default(autoincrement())
  slug        String    @unique
  title       String
  description String?
  parentId    Int?      @map("parent_id")
  position    Int       @default(0)
  createdAt   DateTime  @map("created_at") @default(now())
  updatedAt   DateTime  @map("updated_at") @updatedAt

  parent   Category?        @relation("CategoryToCategory", fields: [parentId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  children Category[]        @relation("CategoryToCategory")
  products ProductCategory[]

  @@index([parentId])
  @@map("categories")
}

model ProductCategory {
  productSlug String @map("product_slug")
  categoryId  Int    @map("category_id")
  position    Int    @default(0)

  product  Product @relation(fields: [productSlug], references: [slug], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@id([productSlug, categoryId])
  @@index([categoryId])
  @@map("product_categories")
}
